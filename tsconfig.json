{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    "allowJs": true, // JS/JSX 파일을 허용
    "checkJs": false, // JS 파일을 타입 체크하지 않음
    "jsx": "react-jsx", // React 에서 JSX 사용
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["src"]
}
